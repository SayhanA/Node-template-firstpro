<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/styles/shop.css" />
  </head>
  <body>
    <%- include('includes/nav.ejs') %>
    <main>
      <div class="cards">
        <% if (props.length > 0) { %> <% props.forEach((product) => { %>
        <article class="card">
          <img
            src="/images/book.avif"
            alt="A stack of Geography books"
            class="card_img"
          />
          <h3 class="card_title"><%= product.name %></h3>
          <p class="card_description"><%= product.description %></p>
          <button type="button" class="card_button">Add to cart</button>
        </article>
        <% }) %> <% } else { %>
        <p>No books found.</p>
        <% } %>
      </div>
    <%- include('includes/end.ejs') %>
